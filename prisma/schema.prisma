generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  name      String?
  image     String?   // âœ… tambahkan ini
  role      Role      // enum
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
